<%= form_tag('/playlist/search', method: "get") do %>
<p>
	<%= label_tag 'Búsqueda:' %>
	<br>
	<%= text_field_tag (:q) %>
</p>
<p>
	<%= label_tag 'Límite:' %>
	<br>
	<%= select_tag :limit, options_for_select([['5', '5'], ['10', '10'], ['20', '0'], ['30', '30'], ['40', '40'], ['50', '50'] ])%>
</p>
<%= submit_tag('Buscar') %>
<% end %>