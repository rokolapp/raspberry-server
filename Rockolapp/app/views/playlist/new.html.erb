<%= form_tag('/playlist/search', method: "get") do %>
<p>
	<%= label_tag 'Tipo de busqueda:' %>
	<br>
	<%= select_tag :type, options_for_select([['Por artista', 'artist'], ['Por canción', 'track'], ['Por album', 'album'] ])%>
</p>
<p>
	<%= label_tag 'Búsqueda:' %>
	<br>
	<%= text_field_tag (:q) %>
</p>
<%= submit_tag('Buscar') %>
<% end %>